@model OnlineProdajaKarata.Models.Karta

@{
    ViewData["Title"] = "Delete";
}

<h3 class="my-4">Da li ste sigurni da želite otkazati ovu kartu?</h3>

<div class="card">
    <div class="card-body">
        <form asp-action="Delete">
            <input type="hidden" asp-for="IdKarte" />
            <div class="form-group">
                <button type="submit" class="btn btn-danger">Da</button>
                <a asp-action="Index" class="btn btn-secondary ml-2">Nazad</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}


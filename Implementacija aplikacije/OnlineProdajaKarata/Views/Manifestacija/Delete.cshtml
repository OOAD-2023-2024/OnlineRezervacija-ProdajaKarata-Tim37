        <dd class = "col-sm-10">
            <img src="@Model.Slika" alt="Greska" width="200" />
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="IDManifestacije" />
        <input type="submit" value="Obriši" class="btn btn-danger" /> |
        <a asp-action="Index">Nazad</a>

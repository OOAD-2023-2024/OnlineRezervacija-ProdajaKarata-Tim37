@model IEnumerable<OnlineProdajaKarata.Models.Manifestacija>

@{
    ViewData["Title"] = "Index";
}

<h1>Manifestacije</h1>

<p>
    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
    {
        <a asp-action="Create">Kreiraj Manifestaciju</a>
    }
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                <text></text>
            </th>
            <th>
                <text>Naziv</text>
            </th>
            <th>
                <text>Kategorija</text>
            </th>
            <th>
                <text>Lokacija</text>
            </th>
            <th>
                <text>Trajanje</text>
            </th>
            <th>
                <text>Opis</text>
            </th>
            <th>
                <text>Cijena</text>
            </th>
            <th>
                <text>Vrijeme događaja</text>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.Slika" alt="@item.NazivManifestacije width="100" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NazivManifestacije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Kategorija)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MjestoOdrzavanja)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TrajanjeManifestacije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.OpisManifestacije)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CijenaKarte)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DatumVrijeme)
            </td>
            <td>
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee") || User.IsInRole("User"))
                    {
                        <a asp-action="Details" asp-route-id="@item.IDManifestacije">Kupi</a>
                    }
                 
                    @if (User.IsInRole("Admin") || User.IsInRole("Employee"))
                    {
                        <nobr>|</nobr>
                        <a asp-action="Edit" asp-route-id="@item.IDManifestacije">Izmjeni</a>
                        <nobr>|</nobr>
                        <a asp-action="Delete" asp-route-id="@item.IDManifestacije">Obriši</a>
                        
                    }
               
            </td>
        </tr>
}
    </tbody>
</table>
